{% extends 'base_cvc_back.html.twig' %}

{% block title %}Coach{% endblock %}

{% block body %}
    <h1>Coach</h1>
    <table class="table table-dark">
        <tbody>
        <tr>
            <th class="text-primary-cvc">Nombre</th>
            <td>{{ coach.name }}</td>
        </tr>
        <tr>
            <th class="text-primary-cvc">Apellido</th>
            <td>{{ coach.lastname }}</td>
        </tr>

        <tr>
            <th class="text-primary-cvc">Equipo</th>
            {% if (coach.team.name is defined) %}
                <td>{{ coach.team.name }}</td>
            {% else %}
                <td>No tiene equipo actualmente</td>
            {% endif %}

        </tr>
        </tbody>
    </table>

    <a href="{{ path('app_coach_index') }}" class="btn bg-primary-cvc rounded-0">Volver <i class="bi bi-arrow-return-left"></i></a>
    <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="btn btn-primary rounded-0">Editar <i class="bi bi-pencil-square"></i></a>

    {{ include('coach/_delete_form.html.twig') }}
{% endblock %}
