{% extends 'base_cvc_back.html.twig' %}

{% block title %}Detalles del entrenador - CVC{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 py-3">
            <h2 class="m-0 border-bottom border-success text-primary-cvc secondary-font-cvc d-flex align-items-center">{{ coach.name }}</h2>
        </div>
        <div class="col-12">
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th>Nombre</th>
                    <td>{{ coach.name }}</td>
                </tr>
                <tr>
                    <th>Apellido</th>
                    <td>{{ coach.lastname }}</td>
                </tr>

                <tr>
                    <th>Equipo</th>
                    {% if (coach.team.name is defined) %}
                        <td>{{ coach.team.name }}</td>
                    {% else %}
                        <td>No tiene equipo actualmente</td>
                    {% endif %}

                </tr>
                </tbody>
            </table>

            <a href="{{ path('app_coach_index') }}" class="btn bg-secondary-cvc rounded-0">Volver <i class="bi bi-arrow-return-left"></i></a>

            <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="btn bg-primary text-light rounded-0">Editar <i class="bi bi-pencil-square"></i></a>

            {{ include('coach/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
