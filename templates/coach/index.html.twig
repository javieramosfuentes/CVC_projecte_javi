{% extends 'base_cvc_back.html.twig' %}

{% block title %}Entrenadores - CVC{% endblock %}

{% block body %}
    <div class="py-5 px-2" data-controller="hello">
        <div class="d-flex align-items-center justify-content-between py-3">
            <h2 class="m-0 border-bottom border-success text-primary-cvc secondary-font-cvc d-flex align-items-center">Entrenadores <i class="bi bi-easel2-fill mx-3"></i></h2>
            <div class="d-flex position-relative">
                <i class="bi bi-search position-absolute start-0 top-50 ms-4 text-quaternary-cvc translate-middle opacity-75"></i>
                <input type="text" name="coach_searcher" placeholder="Busca un registro aquí" id="coach_searcher" class="form-control rounded-0 ps-5">
                <a href="{{ path('app_coach_new') }}" class="btn btn-success rounded-0 d-flex align-items-center">Añadir <i class="bi bi-plus fs-4"></i></a>
            </div>
        </div>
        <table class="table table-dark shadow">
            <thead>
            <tr>
                <th>Nombre</th>
                <th>Apellido</th>
                <th>Equipo</th>
                <th>Acciones</th>
            </tr>
            </thead>
            <tbody>
            {% for coach in coaches %}
                <tr>
                    <td>{{ coach.name }}</td>
                    <td>{{ coach.lastname }}</td>
                    <td>{{ coach.team.name }}</td>
                    <td>
                        <a href="{{ path('app_coach_show', {'id': coach.id}) }}" class="btn bg-info rounded-0" data-hello-target="btn" data-bs-toggle="modal" data-bs-target="#coachIndexModal"><i class="bi bi-eye-fill"></i></a>
                        <a href="{{ path('app_coach_edit', {'id': coach.id}) }}" class="btn btn-primary rounded-0"><i class="bi bi-pencil-square"></i></a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No se encontraron registros</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

        <!-- Modal -->
        <div class="modal fade modal-dialog p-5" id="coachIndexModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="coachIndexModal" aria-hidden="true">
            <div class="modal-dialog p-3">
                <div class="modal-content rounded-0 bg-quaternary-cvc" style="box-shadow: 0 0 30px 5px var(--primary-color);">
                    <div class="modal-header">
                        <h5 class="modal-title primary-font-cvc" id="coachIndexModalLabel">Modal title</h5>
                        <button type="button" class="btn-close text-primary-cvc" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body" data-hello-target="modal">

                    </div>
                    <div class="modal-footer">

                    </div>
                </div>
            </div>
        </div>
    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center my-2 ">
            <li class="page-item {% if coaches.currentPageNumber == 1 %}disabled{% endif %}">
                <a class="page-link bg-primary-cvc primary-border-cvc text-quaternary-cvc"
                   href="{% if coaches.currentPageNumber > 1 %}{{ path('app_coach_index', {'page': coaches.currentPageNumber - 1}) }}{% endif %}"
                   aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                </a>
            </li>
            {% for page in 1..coaches.pageCount %}
                <li class="page-item bg-primary-cvc text-quaternary-cvc">
                    {% if page == coaches.currentPageNumber %}
                        <a class="page-link bg-primary-cvc primary-border-cvc text-quaternary-cvc fw-bold bg-opacity-75" href="{{ path('app_coach_index', {'page': page}) }} ">{{ page }}</a>
                    {% else %}
                        <a class="page-link bg-quaternary-cvc primary-border-cvc text-primary-cvc" href="{{ path('app_coach_index', {'page': page}) }} ">{{ page }}</a>
                    {% endif %}
                </li>
            {% endfor %}
            <li class="page-item {% if coaches.currentPageNumber == coaches.pageCount %}disabled{% endif %}">
                <a class="page-link bg-primary-cvc primary-border-cvc text-quaternary-cvc"
                   href="{% if coaches.currentPageNumber < coaches.pageCount %}{{ path('app_coach_index', {'page': coaches.currentPageNumber + 1}) }}{% endif %}"
                   aria-label="Next">
                    <span aria-hidden="true">&raquo;</span>
                </a>
            </li>
        </ul>
    </nav>
{% endblock %}
