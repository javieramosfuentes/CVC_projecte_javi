<div class="row">
    <div class="col-12">

        <nav class="navbar navbar-expand-lg navbar-light px-2 bg-primary-cvc">
            <div class="d-flex justify-content-between align-items-center w-100">
                <a class="navbar-brand" href="{{ path('app_home')}}">
                    <img src="{{ asset('src/logoCVC-300x100.png') }}" alt="logo-cvc" width="100px">
                </a>
                {% if app.user %}
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand" data-bs-toggle="offcanvas" href="#offcanvasExample" role="button" aria-controls="offcanvasExample">
                    <i class="bi bi-person fs-2"></i>
                </a>
                {% else %}
                    <span class="d-flex align-items-center justify-content-between">
                    <a class="navbar-brand primary-font-cvc m-0" href="{{ path('app_login')}}">
                        Inicia sesión
                    </a>
                    <span class="mx-3 text-quaternary-cvc">|</span>
                    <a class="navbar-brand primary-font-cvc m-0" href="#">
                        Registrate
                    </a>
                </span>
                {% endif %}
            </div>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light px-2 bg-quaternary-cvc shadow">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-center justify-content-center w-100 fs-3 gap-4">
                    {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Album</a>
                    </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Sobre Nosotros</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
</div>
{% if app.user %}
<div class="w-100 d-flex justify-content-center sticky-top">
    <span class="primary-font-cvc text-center bg-danger px-2 py-1 rounded-4 my-3">Nuevo Sobre: 01h 12m 12s</span>
</div>
{% endif %}

<div class="offcanvas offcanvas-end bg-quaternary-cvc" tabindex="-1" id="offcanvasExample" aria-labelledby="offcanvasExampleLabel">
    <div class="offcanvas-header text-primary-cvc">
        {% if app.user %}
        <h5 class="offcanvas-title" id="offcanvasExampleLabel">{{ app.user.username }}</h5>
        {% endif %}
        <button type="button" class="btn-close bg-primary-cvc" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body d-flex flex-column justify-content-between text-light">
        <div>
            Some text as placeholder. In real life you can have the elements you have chosen. Like, text, images, lists, etc.
        </div>
        <div class="me-3">
            <a href="{{ path('app_logout') }}" class="nav-link fs-4">
                Cerrar sesión <i class="bi bi-box-arrow-left"></i>
            </a>
        </div>
    </div>
</div>
