
<div class="container-fluid">
    <div class="row">
        <nav class="col-12 navbar bg-primary-cvc d-flex flex-wrap justify-content-lg-between justify-content-center align-items-center gap-5 px-lg-3">
            <a class="navbar-brand m-0" href="{{ path('app_home') }}">
                <img src="{{ asset('src/logoCVC-300x100.png') }}" alt="logo-cvc" width="100px">
            </a>
            {% if app.user %}
                <button class="btn" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasRight" aria-controls="offcanvasRight"><i class="bi bi-person-fill fs-2"></i></button>
            {% else %}
                <div class="d-flex align-items-center">
                    <a class="navbar-brand primary-font-cvc m-0" href="{{ path('app_login') }}">
                        Inicia sesión
                    </a>
                    <span class="mx-3 text-quaternary-cvc">|</span>
                    <a class="navbar-brand primary-font-cvc m-0" href="{{ path('app_register') }}">
                        Regístrate
                    </a>
                </div>
            {% endif %}
            <a class="navbar-toggler border-0 rounded-0 m-0 p-0 d-lg-none" data-bs-toggle="offcanvas" href="#mobileList" role="button" aria-controls="mobileList">
                <span class="navbar-toggler-icon"></span>
            </a>
        </nav>
        <nav class="navbar navbar-expand-lg navbar-light bg-quaternary-cvc shadow">
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav align-items-center justify-content-center w-100 fs-3 gap-4">
                    {% if app.user %}
                        <li class="nav-item active">
                            <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Sobre</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Album</a>
                        </li>
                    {% endif %}
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="{{ path('app_contact') }}">Contacto</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="{{ path('app_aboutUs') }}">Sobre Nosotros</a>
                    </li>
                </ul>
            </div>
        </nav>
    </div>
    {% if app.user %}
        <div class="w-100 d-flex justify-content-center sticky-top">
            <span class="primary-font-cvc text-center bg-danger px-2 py-1 rounded-4 my-3">Nuevo Sobre: 01h 12m 12s</span>
        </div>
    {% endif %}

    {% if app.user %}
    <div class="offcanvas offcanvas-end bg-quaternary-cvc" tabindex="-1" id="offcanvasRight" aria-labelledby="offcanvasRightLabel">
        <div class="offcanvas-header text-primary-cvc">
            <h5 class="offcanvas-title" id="offcanvasExampleLabel">{{ app.user.username }}</h5>
            <button type="button" class="btn-close text-reset bg-primary-cvc opacity-75 rounded-0" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column justify-content-end text-light">
            <a href="{{ path('app_logout') }}" class="nav-link fs-4 me-3">
                Cerrar sesión <i class="bi bi-box-arrow-left"></i>
            </a>
        </div>
    </div>
    {% endif %}

    <div class="offcanvas offcanvas-top bg-quaternary-cvc h-100" tabindex="-1" id="mobileList" aria-labelledby="mobileListLabel">
        <div class="offcanvas-header text-primary-cvc">
            <button type="button" class="btn-close bg-primary-cvc rounded-0 border-0" data-bs-dismiss="offcanvas" aria-label="Close"></button>
        </div>
        <div class="offcanvas-body d-flex flex-column justify-content-between text-light">
            <ul class="navbar-nav align-items-center justify-content-center w-100 fs-3 gap-4">
                {% if app.user %}
                    <li class="nav-item active">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Sobre</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link primary-font-cvc text-primary-cvc" href="#">Album</a>
                    </li>
                {% endif %}
                <li class="nav-item">
                    <a class="nav-link primary-font-cvc text-primary-cvc" href="{{ path('app_contact') }}">Contacto</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link primary-font-cvc text-primary-cvc" href="{{ path('app_aboutUs') }}">Sobre Nosotros</a>
                </li>
            </ul>
        </div>
    </div>
</div>