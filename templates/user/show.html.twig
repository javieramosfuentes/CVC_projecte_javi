{% extends 'base_cvc_back.html.twig' %}

{% block title %}Detalles del usuario - CVC{% endblock %}

{% block body %}
    <div class="row">
        <div class="col-12 py-3">
            <h2 class="m-0 border-bottom border-success text-primary-cvc secondary-font-cvc d-flex align-items-center">{{ user.username }}</h2>
        </div>
        <div class="col-12">
            <table class="table table-dark">
                <tbody>
                <tr>
                    <th>Nombre de usuario</th>
                    <td>{{ user.username }}</td>
                </tr>
                <tr>
                    <th>Contraseña</th>
                    <td>**********</td>
                </tr>
                <tr>
                    <th>Correo Electrónico</th>
                    <td>{{ user.user.email }}</td>
                </tr>
                <tr>
                    <th>Último inicio de sesión</th>
                    <td>{{ user.lastLogin }}</td>
                </tr>
                </tbody>
            </table>

            <a href="{{ path('app_user_index') }}" class="btn bg-secondary-cvc rounded-0">Volver <i class="bi bi-arrow-return-left"></i></a>
            <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn bg-primary text-light rounded-0">Editar <i class="bi bi-pencil-square"></i></a>
            {{ include('user/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
