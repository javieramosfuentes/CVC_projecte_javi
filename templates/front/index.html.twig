{% extends 'base_cvc.html.twig' %}

{% block title %}Página de Inicio - CVC{% endblock %}

{% block body %}
    <div class="row py-5" data-controller="search">
        <div class="col-12">
            <h1 class="display-4 secondary-font-cvc text-primary-cvc text-center">Busca tus jugadores favoritos</h1>
        </div>
        <div class="col-12 p-4 my-3 text-quaternary-cvc">
            <div class="form-floating">
                <input type="text" id="indexSearcher" name="home-searcher" placeholder="Busca aquí tus jugadores favoritos" class="form-control text-light rounded-0 bg-quaternary-cvc" data-target="search.inputSearch">
                <label for="indexSearcher" class="text-light">Busca aquí tus jugadores favoritos</label>
            </div>
            <div class="list-group rounded-0" data-target="search.results">
                {% for player in players %}
                    <a href="http://localhost:8080/preview/player/{{ player.id }}" class="bg-secondary-cvc list-group-item list-group-item-action d-flex justify-content-between align-items-center index-result" aria-current="true">
                       <span class="w-75">{{ player.name }} {{ player.lastname }}</span>
                        <div class="w-25 d-flex">
                            <div class="text-center w-25">{{ player.position }}</div>
                            <div class="w-75"> {{ player.team.name }}</div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}
