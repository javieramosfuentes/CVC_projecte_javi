        <label for="inputName">Nombre</label>
        {{ form_widget(form.name, { 'attr': {'id': 'inputName','placeholder':"Introduce el nombre del jugador", 'class':'form-control rounded-0 p-2'} }) }}
    </div>
    <div class="col-8 py-3">
        <label for="inputLastName">Apellido</label>
        {{ form_widget(form.lastname, { 'attr': {'id': 'inputLastName','placeholder':"Introduce el apellido del jugador", 'class':'form-control rounded-0 p-2'} }) }}
