    <div class="col-1 py-3 d-flex align-items-end">
        <button class="btn btn-primary rounded-0 primary-font-cvc p-2 w-100">{{ button_label|default('Crear') }}</button>
    </div>
    <div class="col-2 py-3 d-flex align-items-end">
        <a href="{{ path('app_player_index') }}" class="btn bg-secondary-cvc primary-font-cvc rounded-0 p-2 w-100">Volver a la lista <i class="bi bi-arrow-return-left"></i></a>
