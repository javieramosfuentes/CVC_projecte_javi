<form method="post" class="d-inline" action="{{ path('app_player_delete', {'id': player.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ player.id) }}">
    <button class="btn btn-danger rounded-0">Borrar <i class="bi bi-trash"></i></button>
</form>
