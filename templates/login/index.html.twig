{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="row text-center">
        <div class="col-12">
            <h2 class="display-2">Inicio de Sesión</h2>
        </div>
        <div class="col-12">
            <p class="fs-4">¿Aún no te has registrado? Hazlo <a href="#">aquí</a>!</p>
        </div>
    </div>
    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}})  }}
    <div class="row">
        <div class="col-12">
            <div>
                <div class="py-3">
                    <label for="username" class="fs-3">Nombre de usuario</label>
                    {{ form_widget(form.username, { 'attr': {'id': 'username','placeholder':"Introduce tu nombre de usuario", 'class':'form-control rounded-0 p-2', 'name':'_username'} }) }}
                </div>
                <div class="py-3">
                    <label class="fs-3">Contraseña</label>
                    {{ form_widget(form.password, { 'attr': {'id': 'password','placeholder':"Introduce tu contraseña", 'class':'form-control rounded-0 p-2','name':'_password'} }) }}
                </div>
                <button class="btn bg-primary-cvc rounded-0 my-5 p-2" type="submit">{{ button_label|default('Iniciar sesión') }}</button>
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
